{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "noFallthroughCasesInSwitch": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "noImplicitAny": true,
      "declarationDir": ".tmp/dist/assets/types",
      "declaration": true,
      "target": "es2015",
      "module": "es2015",
      "moduleResolution": "node",
      "strict": true
    },
    "include": [
      "source/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist",
      ".tmp"
    ]
}